NODE_ENV=development
TZ=UTC

# FRONTEND
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_NAME=Imagen a Llavero 3D

# API
API_PORT=4000
API_HOST=0.0.0.0
API_SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGIN=http://localhost:3000

# DATABASE
DATABASE_URL=postgresql://imgtokey:your_password_here@db:5432/imgtokey_db

# REDIS
REDIS_URL=redis://redis:6379

# WORKER
WORKER_CONCURRENCY=2
WORKER_MAX_JOB_TIME=120000

# STORAGE
STORAGE_TYPE=local
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=5242880

# PROCESSING
MIN_SIZE_MM=10
MAX_SIZE_MM=100
MIN_THICKNESS_MM=2
MAX_THICKNESS_MM=10
IMAGE_THRESHOLD=128
IMAGE_SMOOTHING=0

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# LOGS
LOG_LEVEL=info
LOG_FORMAT=json

# SECURITY
HELMET_ENABLED=true
ANTIVIRUS_ENABLED=false
